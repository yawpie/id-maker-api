generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model dosen {
  nama_dosen String?  @db.VarChar(255)
  nip        Int      @id @default(autoincrement())
  matkul     matkul[]
}

model mahasiswa {
  nim      String  @unique(map: "nim") @db.VarChar(12)
  nama_mhs String? @db.VarChar(255)
  id_mhs   Int     @id @default(autoincrement())
}

model matkul {
  kd_matkul Int     @id @default(autoincrement())
  nama_mk   String? @db.VarChar(255)
  nip       Int
  dosen     dosen   @relation(fields: [nip], references: [nip], onUpdate: Restrict, map: "matkul_ibfk_1")

  @@index([nip], map: "nip")
}
